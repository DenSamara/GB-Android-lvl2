<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp"
                >

                <Button
                    android:id="@+id/btStartTask"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="@string/btStartTask"
                    style="@style/MyButton"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/btStartService"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:text="@string/btStartService"
                    style="@style/MyButton"
                    android:layout_weight="1"/>
            </LinearLayout>

        </FrameLayout>

        <include layout="@layout/toolbar" />
        <include layout="@layout/app_progress_bar" />

    </android.support.constraint.ConstraintLayout>

    <fragment
        android:id="@+id/drawer_navigation"
        android:name="com.home.konovaloff.homework.DrawerNavigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/app_navigation" />

</android.support.v4.widget.DrawerLayout>